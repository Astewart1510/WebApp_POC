    <section class="section_top">
        <div class="jumbotron text-center">
            <div class="container">
                <!-- <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
                    View
                </button> -->
                
                <div class="row" style="padding-bottom: 15px">
                    <div class="col-lg-2">
                    <i class="far fa-user-circle fa-5x"></i>                    
                    </div>
                    <div class="col-lg-8">
                        <h2 class="display-5">Your uploaded files</h2>
                    </div>
                </div>

                <input class="form-control" id="myInput" type="text" placeholder="Search..">
                <br>
                
                <div class="tableFixHead" style="height: 270px;overflow: scroll;">
                    <table class="table-hover" >
                        <thead >
                        <tr>
                            <th scope="col">No.</th>
                            <th scope="col">File Name</th>
                            <th scope="col">Type</th>
                            <th scope="col">Viewers</th>
                            <th scope="col">Edit</th>
                            <th scope="col">View</th>
                        </tr>
                        </thead>
                        <tbody id="myTable" >
                        <% if(userData.length!=0){ var i=1; userData.forEach(function(files){ %>
                            <tr>
                                <td>
                                    <%=i; %>
                                </td>
                                <td>
                                    <%=files.name %>
                                </td>
                                <td>
                                    <%=files.type %>
                                </td>
                                <td>
                                    <%=files.viewers.length %>
                                </td>
                                
                                <td><a data-toggle="modal" data-target="#myModal" class="btn btn-sm btn-primary" href="/users/edit/?file=<%=files.file_id%>">Edit</a></td>
                                <td><a  class="btn btn-sm btn-success" href="/users/view/?file=<%=files.file_id%>&type=<%=files.type%>">View</a></td>
                            </tr>
                            <% i++; }) %>
                                <% } else{ %>
                                    <tr>
                                        <td colspan="7">No Data Found</td>
                                    </tr>
                                    <% } %>
                    
                                </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    </div>


<!-- The Modal -->
<div class="modal" id="myModal">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <!-- Modal Header -->
            <div class="modal-header">
                <h4 class="modal-title">Enter your unique 4 digit passcode...</h4>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>

            <!-- Modal body -->
            <div class="modal-body">
                <form method='POST' action='/users/view/' enctype="multipart/form-data">
                <div class="form-group form-inline justify-content-center">
                    <div id="divOuter">
                        <div id="divInner">
                            <input id="partitioned" type="password" maxlength="4" name="passcode"
                                oninput="this.value = this.value.replace(/[^0-9.]/g, '').replace(/(\..*)\./g, '$1');"
                                onKeyPress="if(this.value.length==4) return false;" />
                        </div>
                    </div>
                </div>
            </div>

            <!-- Modal footer -->
                <div class="modal-footer">
                   <input id='submit-btn' type='submit' class="btn btn-primary ">
                   <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </form>
        </div>
    </div>
</div>



    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
        
    </script>

