<div class="jumbotron">
  <div class="container">
  <div class="main-body">

    <div class="row gutters-sm">
      <div class="col-md-4 mb-3">
        <div class="card">
          <div class="card-body">
            <div class="d-flex flex-column align-items-center text-center">
              <i class="far fa-user-circle fa-5x"></i>
              <div class="mt-3">
                <h4><%= file[0].owner %></h4>
                <p></p>
                <h5><i class="text-secondary ">
                    <%= //userInfo.group %>
                  </i>
                </h5>
                <a href="/view"
                  class="btn btn-primary">
                  <span>Documents</span>
                  <i class="bi bi-arrow-right"></i>
                  </a>
                <a href="/submit" class="btn btn-outline-primary">
                  <span>Submit</span>
                  <i class="bi bi-arrow-right"></i>
                </a>
                <p></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-8">
        <div class="card mb-3">
          <div class="card-body">
            <form action="/user/update" method="POST" class="is-readonly">
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">First Name</h6>
              </div>
              <input class="col-sm-9 text-secondary is-disabled" type="text" value="<%= //userInfo.firstName  %>" name="firstName" disabled>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Last Name</h6>
              </div>
              <input class="col-sm-9 text-secondary is-disabled" type="text" value="<%= //userInfo.lastName  %>" name="lastName" disabled>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Username (Email)</h6>
              </div>
               <input class="col-sm-9 text-secondary is-disabled" type="text" value="<%= //userInfo.username %>" name="username" disabled>
            </div>
            <hr>
            <div class="row">
              <div class="col-sm-3">
                <h6 class="mb-0">Mobile</h6>
              </div>
              <input class="col-sm-9 text-secondary is-disabled" type="text" value="<%=// userInfo.mobile %>" name="mobile" disabled> 
            </div>
            <hr>
            <div class="row">
            <div class="col-sm-9">
              <h6 class="d-flex align-items-center mb-3"><i class="material-icons text-info mr-2">Uploaded Documents</i>
                <%= //fileNo %>
              </h6>
            </div>
            </div>
            <div style="padding-left: 50%;" class="d-flex align-items-center mb-3">
              <button type="button" class="btn btn-primary btn-edit js-edit">Edit</button>
              <button type="submit" class="btn btn-success btn-save js-save">Save</button>
            </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>
</div>

